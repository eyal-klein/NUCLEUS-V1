# NUCLEUS Voice Gateway - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# xAI Configuration (Required)
# =============================================================================
XAI_API_KEY=your-xai-api-key-here
XAI_WS_URL=wss://api.x.ai/v1/realtime
XAI_VOICE=Sal
XAI_AUDIO_FORMAT=audio/pcm
XAI_SAMPLE_RATE=24000

# =============================================================================
# Voice Activity Detection (VAD) Settings
# =============================================================================
VAD_THRESHOLD=0.5
VAD_PREFIX_PADDING_MS=300
VAD_SILENCE_DURATION_MS=200

# =============================================================================
# NUCLEUS Services URLs
# =============================================================================
MEMORY_ENGINE_URL=http://memory-engine:8080
DNA_ENGINE_URL=http://dna-engine:8080
ORCHESTRATOR_URL=http://orchestrator:8080

# =============================================================================
# Database (Optional - for persistent settings)
# =============================================================================
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/nucleus

# =============================================================================
# Pub/Sub (Optional - for event publishing)
# =============================================================================
# PUBSUB_PROJECT_ID=nucleus-project
# PUBSUB_TOPIC_VOICE_EVENTS=voice-events

# =============================================================================
# Session Settings
# =============================================================================
SESSION_TIMEOUT_SECONDS=3600
MAX_CONCURRENT_SESSIONS=100

# =============================================================================
# Service Settings
# =============================================================================
PORT=8090
LOG_LEVEL=INFO
